{
  "name": "dairyapp",
  "version": "1.1.3",
  "description": "An Electron application with React",
  "main": "./out/main/index.js",
  "author": "Production House",
  "homepage": "https://electron-vite.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/shivamsk00/dairyApp_frontend.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:publish": "npm run build && electron-builder --publish=always",
    "dist": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish=always"
  },
  "build": {
    "appId": "com.dairy.productionhouse.dairyapp",
    "productName": "DairyApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "resources/icon1.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "publisherName": "Production House",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "icon": "resources/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DairyApp",
      "installerIcon": "resources/icon1.ico",
      "uninstallerIcon": "resources/icon1.ico",
      "installerHeaderIcon": "resources/icon1.ico",
      "deleteAppDataOnUninstall": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "guid": "12345678-abcd-1234-5678-123456789abc",
      "include": "build/installer.nsh",
      "warningsAsErrors": false,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US"
      ],
      "language": "2033",
      "multiLanguageInstaller": false,
      "packElevateHelper": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "shivamsk00",
        "repo": "dairyApp_frontend",
        "releaseType": "release",
        "publishAutoUpdate": true
      }
    ],
    "generateUpdatesFilesForAllChannels": true,
    "releaseInfo": {
      "releaseNotesFile": "CHANGELOG.md"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@tanstack/react-table": "^8.21.3",
    "apexcharts": "^4.7.0",
    "axios": "^1.9.0",
    "electron-updater": "^6.6.2",
    "electron-log": "^5.0.0",
    "lucide-react": "^0.515.0",
    "react-apexcharts": "^1.7.0",
    "react-data-table-component": "^7.7.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.3",
    "react-toastify": "^11.0.5",
    "styled-components": "^6.1.19",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.17",
    "vite": "^6.2.6"
  }
}
